<Window x:Class="CustomNotepad.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Custom Notepad" Height="600" Width="900">
    <DockPanel Margin="10">
        
        <!-- Menu Bar -->
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_Open" Click="OpenFile_Click"/>
                <MenuItem Header="_Save" Click="SaveFile_Click"/>
                <MenuItem Header="Save _As" Click="SaveFileAs"/>
                <Separator/>
                <MenuItem Header="_Print" Click="PrintFile_Click"/>
                <MenuItem Header="E_xit" Click="Exit_Click"/>
            </MenuItem>
            <MenuItem Header="_Edit">
                <MenuItem Header="_Undo" Click="Undo_Click"/>
                <MenuItem Header="_Redo" Click="Redo_Click"/>
                <Separator/>
                <MenuItem Header="Cu_t" Click="Cut_Click"/>
                <MenuItem Header="_Copy" Click="Copy_Click"/>
                <MenuItem Header="_Paste" Click="Paste_Click"/>
            </MenuItem>
            <MenuItem Header="_Format">
                <MenuItem Header="_Bold" Click="BoldButton_Click"/>
                <MenuItem Header="_Italic" Click="ItalicButton_Click"/>
                <MenuItem Header="_Underline" Click="UnderlineButton_Click"/>
                <Separator/>
                <MenuItem Header="Font _Type">
                    <ComboBox Name="FontTypeComboBox" Width="140" SelectionChanged="FontTypeComboBox_SelectionChanged"/>
                </MenuItem>
                <MenuItem Header="Font _Size">
                    <ComboBox Name="FontSizeComboBox" Width="80" IsEditable="True" SelectionChanged="FontSizeComboBox_SelectionChanged">
                        <ComboBoxItem>8</ComboBoxItem><ComboBoxItem>10</ComboBoxItem><ComboBoxItem>12</ComboBoxItem><ComboBoxItem>14</ComboBoxItem><ComboBoxItem>16</ComboBoxItem>
                        <ComboBoxItem>18</ComboBoxItem><ComboBoxItem>20</ComboBoxItem><ComboBoxItem>24</ComboBoxItem><ComboBoxItem>28</ComboBoxItem><ComboBoxItem>32</ComboBoxItem>
                        <ComboBoxItem>36</ComboBoxItem><ComboBoxItem>40</ComboBoxItem>
                    </ComboBox>
                </MenuItem>
                <MenuItem Header="Font _Color" Click="FontColorButton_Click"/>
                <Separator/>
                <MenuItem Header="Align _Left" Click="AlignLeft_Click"/>
                <MenuItem Header="Align _Center" Click="AlignCenter_Click"/>
                <MenuItem Header="Align _Right" Click="AlignRight_Click"/>
                <MenuItem Header="_Justify" Click="AlignJustify_Click"/>
            </MenuItem>
            <MenuItem Header="_Paragraph">
                <MenuItem Header="Indent +" Click="IndentParagraph_Click"/>
                <MenuItem Header="Line Spacing" Click="LineSpacing_Click"/>
                <Separator/>
                <MenuItem Header="Bullet List" Click="BulletList_Click"/>
                <MenuItem Header="Numbered List" Click="NumberedList_Click"/>
            </MenuItem>
            <MenuItem Header="_View">
                <!-- Named theme menu items for code-behind -->
                <MenuItem Header="_Light Mode" IsCheckable="True" Name="LightModeMenuItem" Click="ThemeMenuItem_Click" IsChecked="True"/>
                <MenuItem Header="_Dark Mode" IsCheckable="True" Name="DarkModeMenuItem" Click="ThemeMenuItem_Click"/>
                <MenuItem Header="_GitHub Mode" IsCheckable="True" Name="GitHubModeMenuItem" Click="ThemeMenuItem_Click"/>
                <!-- Add more modes here if desired -->
            </MenuItem>
            <MenuItem Header="_Export">
                <MenuItem Header="Export as PDF" Click="ExportPdf_Click"/>
            </MenuItem>
        </Menu>

        <!-- Main text editing area -->
        <RichTextBox Name="MainRichTextBox" VerticalScrollBarVisibility="Auto" SpellCheck.IsEnabled="True" AcceptsTab="True" />

        <!-- Status Bar -->
        <StatusBar DockPanel.Dock="Bottom" Height="22" VerticalAlignment="Bottom" Name="StatusBar">
            <StatusBarItem>
                <TextBlock Name="StatusCursorPosition" Text="Line: 1, Col: 1"/>
            </StatusBarItem>
            <StatusBarItem>
                <TextBlock Name="StatusWordCount" Text="Words: 0"/>
            </StatusBarItem>
            <StatusBarItem>
                <TextBlock Name="StatusFileName" Text="No file"/>
            </StatusBarItem>
        </StatusBar>
    </DockPanel>
</Window>
